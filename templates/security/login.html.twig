{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <h1>Connexion</h1>

    <div class="my-form-container">

        <form method="post">
            {% if error %}
                <div class="my-form-error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <label for="username">Username</label>
            <input type="text" value="{{ last_username }}" name="_username" id="username" autocomplete="username" required autofocus>

            <label for="password">Password</label>
            <input type="password" name="_password" id="password" autocomplete="current-password" required>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <a href="{{ path('app_forgot_password_request') }}">Mot de passe oubli√©</a>

            <button type="submit">Connexion</button>
        </form>
    </div>
{% endblock %}
